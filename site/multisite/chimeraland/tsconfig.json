{
  "compilerOptions": {
    "outDir": "tmp/dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2016"]
  },
  "include": [
    "chimeraland",
    "src",
    "project.js",
    "package.json",
    "sync",
    "build.ts"
  ],
  "exclude": ["**/node_modules", "**/tmp"]
}
