{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "yarn start",
  "watch": [
    "./src/**/*.ts"
  ],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "dist",
    "tests",
    "tmp",
    "temp",
    "./src/tmp",
    "docs",
    "release"
  ],
  "delay": 3000,
  "ext": "ts,js",
  "verbose": false
}