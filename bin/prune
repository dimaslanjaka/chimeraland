#!/usr/bin/env bash

git checkout --orphan latest_branch # Move to new branch with new object
git add -A # Add all files
git commit -am "Prune" # Commiting the changes
git branch -D master # Deleting master branch
git branch -m master # Renaming branch as master
git push -f origin master # Pushes to master branch
git reflog expire --all --expire=now --verbose # remove logs
git gc --aggressive --prune=all # remove the old files
git count-objects -v # count current objects
